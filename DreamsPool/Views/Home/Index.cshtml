@model IEnumerable<Pool>

<div id="myCarousel" class="carousel slide mt-5" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="first-slide img-fluid" src="~/img/pool-main.jpeg" alt="Main pool foto">
            <div class="container d-none d-sm-block">
                <div class="carousel-caption text-left">
                    <h1 class="text-black">@Localizer["Carousel1"]</h1>
                    <p>@Localizer["Carousel1_M"]</p>
                    <p><a class="btn btn-info" href="#feature3" role="button">@Localizer["View details"] &raquo;</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="second-slide img-fluid" src="~/img/pool-foto1.jpg" alt="Second pool foto">
            <div class="container d-none d-sm-block">
                <div class="carousel-caption">
                    <h1 class="text-black">@Localizer["Carousel2"]</h1>
                    <p>@Localizer["Carousel2_M"]</p>
                    <p><a class="btn btn-info" href="#feature1" role="button">@Localizer["View details"] &raquo;</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="third-slide img-fluid" src="~/img/reformas/3.JPG" alt="Foto of reformas">
            <div class="container d-none d-sm-block">
                <div class="carousel-caption text-right">
                    <h1 h1 class="text-black">@Localizer["Carousel4"]</h1>
                    <p><a class="btn btn-info" href="#feature4" role="button">@Localizer["View details"] &raquo;</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="third-slide img-fluid" src="~/img/pool-foto2.jpg" alt="Third pool foto">
            <div class="container d-none d-sm-block">
                <div class="carousel-caption text-right">
                    <h1 h1 class="text-black">@Localizer["Carousel3"]</h1>
                    <p>@Localizer["Carousel3_M"]</p>
                    <p><a class="btn btn-info" href="#feature3" role="button">@Localizer["View details"] &raquo;</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="third-slide img-fluid" src="~/img/reformas/4.JPG" alt="Foto of reformas">
            <div class="container d-none d-sm-block">
                <div class="carousel-caption text-right">
                    <h1 h1 class="text-black">@Localizer["Carousel5"]</h1>
                    <p><a class="btn btn-info" href="#feature5" role="button">@Localizer["View details"] &raquo;</a></p>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@if (TempData["message"] != null)
{
    <div class="alert alert-success font-weight-bold">@TempData["message"]</div>
}
<hr class="featurette-divider between">
<div class="container">
    <div class="row">
        <div class="col-lg-4 text-center">
            <img class="rounded-circle" src="~/img/about.png" alt="Image about us" width="140" height="140">
            <h2>@Localizer["About"]</h2>
            <p>@Localizer["About_M"]</p>
            <p><a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="AboutUs" role="button">@Localizer["View details"] &raquo;</a></p>
        </div>
        <div class="col-lg-4 text-center">
            <img class="rounded-circle" src="~/img/order.png" alt="Image order" width="140" height="140">
            <h2>@Localizer["Order"]</h2>
            <p>@Localizer["Order_M"]</p>
            <p><a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Order" role="button">@Localizer["View details"] &raquo;</a></p>
        </div>
        <div class="col-lg-4 text-center">
            <img class="rounded-circle" src="~/img/contactUs.png" alt="Image Contact" width="140" height="140">
            <h2>@Localizer["Contact"]</h2>
            <p>@Localizer["Contact_M"]</p>
            <p><a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Contact" role="button">@Localizer["View details"] &raquo;</a></p>
        </div>
    </div>
    <hr class="featurette-divider between" id="feature1">
    <div class="row featurette">
        <div class="col-md-7">
            <h2 class="featurette-heading">@Localizer["Featurette1"]</h2>
            <p class="lead">@Localizer["Featurette1_M"]</p>
        </div>
        <div class="col-md-5">
            <img class="featurette-image img-fluid mx-auto" src="~/img/pool-foto7.jpg" alt="featurette1 pool image">
        </div>
    </div>
    <hr class="featurette-divider between">
    <div class="row featurette" id="feature2">
        <div class="col-md-7 order-md-2">
            <h2 class="featurette-heading">@Localizer["Featurette2"]</h2>
